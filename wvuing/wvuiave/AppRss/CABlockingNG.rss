// dialog resource for contact selection dialog
RESOURCE DIALOG R_BLOCK_DIALOG
    {
    flags = EAknDialogSelectionList
    		| EEikDlgItemCtlMinSizeOrLess
            | EEikDialogFlagFillAppClientRect;
    buttons = r_chat_softkeys_options_back__contextoptions;
    items =
    {
    DLG_LINE
        {
        type = EAknCtSingleListBox;
        id = ESelectionListControl;
        itemflags = EEikDlgItemCtlMinSizeOrLess 
					| EEikDialogFlagFillAppClientRect;
        control = LISTBOX
			{
		//	flags = EAknListBoxMarkableList;
		 	flags = EAknListBoxSelectionList;
			};
        }
    ,
    DLG_LINE
        {
        itemflags = EEikDlgItemNonFocusing
        			|EEikDlgItemCtlMinSizeOrLess 
					| EEikDialogFlagFillAppClientRect;
        id = EFindControl;
        type = EAknCtSelectionListFixedFind;
        }
    };
    }

