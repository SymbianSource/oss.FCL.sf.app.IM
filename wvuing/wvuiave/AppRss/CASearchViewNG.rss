    items=
        {
        DLG_LINE
            {
            type=EAknCtQuery;
            id=EGeneralQuery;
            control= AVKON_DATA_QUERY
                {
                    layout = EDataLayout;
                    label = qtn_chat_search_data_prtx;
                    control=EDWIN
